@using Domain.Entities;
@using Microsoft.AspNetCore.Identity

@inject SignInManager<JdrUser> SignInManager
@inject UserManager<JdrUser> UserManager

<ul class="navbar-nav">
	@if (SignInManager.IsSignedIn(User))
	{
		<div class="dropdown">
			<a class="nav-link dropdown-toggle text-light" role="button" data-bs-toggle="dropdown" aria-expanded="false"> Hello @UserManager.GetUserName(User)!</a>
			<ul class="dropdown-menu bg-secondary">
				<li>
					<a id="manage" class="nav-link text-light" asp-area="Identity" asp-page="/Account/Manage/Index">Mon compte</a>
				</li>
				<li>
					<form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
						<button id="logout" type="submit" class="nav-link text-light">Logout</button>
					</form>
				</li>
			</ul>
		</div>

	}
	else
	{
		<li class="nav-item">
			<a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
		</li>
		<li class="nav-item">
			<a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
		</li>
	}
</ul>
